<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Blog', root_path, :class => "navbar-brand" %>
    </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="active">
            <%= link_to 'Home page', root_path %>
          </li>

        <% if user_signed_in? %>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              My Articles
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'See all', user_articles_path(current_user) %>
              </li>
              <li>
                <%= link_to 'New Article', new_user_article_path(current_user) %>
              </li>
              <li role="separator" class="divider"></li>
              <li>
                <a href="#">Should see</a>
              </li>
            </ul>
          </li>
        </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="glyphicon glyphicon-cog"></span>
                Settings
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a href="#">Your Profile</a>
                  <a href="#">Account Settings</a>
                </li>
                <li role="separtor" class="divider"></li>
                <li>
                  <%= link_to 'Sing out', destroy_user_session_path, :method => :delete %>
                </li>
              </ul>
            </li>
          </ul>
        <% else %>
        </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to 'Login', new_user_session_path%>
            </li>
            <li>
              <%= link_to 'Sign Up', new_user_registration_path %>
            </li>
          </ul>
        <% end %>

      </div>
    </div>
  </nav>
  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
