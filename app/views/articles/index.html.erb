<h1>Listing Articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', user_article_path(current_user.id, article)%></td>
      <td><%= link_to 'Edit', edit_user_article_path(current_user.id, article)%></td>
      <td><%= link_to 'Destroy', user_article_path(current_user.id, article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>

<%= link_to 'New article', new_user_article_path %>